@model List<Order>;

<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (ViewBag.EmployeeName != null)
{
    <h2>Orders for @ViewBag.EmployeeName</h2>
}

@if (Model.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    Order Number
                </th>
                <th>
                    Date
                </th>
                <th>
                    Country
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        @order.OrderId
                    </td>
                    <td>
                        @(order.OrderDate?.ToString("MM/dd/yyyy") ?? "N/A")

                    </td>
                    <td>
                        @order.ShipCountry
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-2">No orders found.</div>
}